@page
@model dsd03Razor2020Assessment.Pages.IndexModel


@{
    ViewData["Title"] = "Movie Database";
}

<h1>Movie Database</h1>


<h3>Welcome to the Movie database</h3>

<p>To enter a Movie click  <a asp-page="/Movies/index">Movies</a>  </p>

<p>To enter a Cast member click  <a asp-page="/Casts/index">Cast</a>  </p>
 <div class="container">
<div class="row">
@* <div class="col-sm-4">*@

@foreach (var item in Model.Results) {

    var PosterPath = "https://image.tmdb.org/t/p/w200/" + @item.PosterPath;

    <div class="card"style="width: 18rem;">
  <img class="card-img-top" src=@PosterPath alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">@item.Title</h5>
    <p class="card-text"> @item.Overview</p>
    <a href="#" class="btn btn-primary">Watch  </a>
  </div>
</div>



}

</div>
</div>
@*</div>*@